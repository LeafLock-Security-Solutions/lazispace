#!/bin/bash

commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Regex for conventional commit format matching your guidelines
# Types: feat, fix, docs, refactor, chore
conventional_commit_regex="^(build|feat|fix|docs|refactor|chore)(\([a-z0-9_-]+\))?: .+"

if ! echo "$commit_msg" | head -n1 | grep -qE "$conventional_commit_regex"; then
    echo "Error: Invalid commit message format"
    echo ""
    echo "Commit message must follow Conventional Commits format:"
    echo "  <type>[optional scope]: <description>"
    echo ""
    echo "Allowed types: build, feat, fix, docs, refactor, chore"
    echo ""
    echo "Examples:"
    echo "  feat: add workspace validation"
    echo "  fix(logger): resolve bootstrap replay buffer issue"
    echo "  docs: update developer setup guide"
    echo ""
    echo "See docs/COMMIT_GUIDELINES.md for details"
    exit 1
fi

# Check subject line length (first line)
first_line=$(echo "$commit_msg" | head -n1)
if [ ${#first_line} -gt 72 ]; then
    echo "Error: Commit subject line too long (${#first_line} chars, max 72)"
    exit 1
fi

exit 0
